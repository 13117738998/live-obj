scrollbar($width = 3px, $height = 3px, $bgc = rgba(0, 0, 0, 0.2), $scrollbarTrack = rgba(0, 0, 0, 0.05))
  ::-webkit-scrollbar
    width $width
    height $height
  /* 定义滚动条轨道 内阴影+圆角 */
  ::-webkit-scrollbar-track
    border-radius 5px
    background-color $scrollbarTrack
  /* 定义滑块 内阴影+圆角 */
  ::-webkit-scrollbar-thumb
    background-color $bgc
    border-radius 5px

hover($color = $theme)
  &:hover
    color $color !important
    cursor pointer
